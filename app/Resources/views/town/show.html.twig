{% extends 'base.html.twig' %}

{% block body %}
    <h1>Town</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ town.id }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ town.country }}</td>
            </tr>
            <tr>
                <th>Town</th>
                <td>{{ town.town }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('town_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('town_edit', { 'id': town.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
